{
    "os_recipies": [
        {
            "name": "Dock Orientation",
            "defaults": "com.apple.dock orientation right"
        },
        {
            "name": "Dock Size",
            "defaults": "com.apple.dock tilesize -integer 24"
        }
    ],
    "apps": [
        {
            "name": "SSH",
            "files": [
                {
                    "path": "~/.ssh"
                }
            ]
        },
        {
            "name": "Apple Music",
            "files": [
                {
                    "path": "~/Music/Music"
                }
            ]
        },
        {
            "name": "Cyberduck",
            "files": [
                {
                    "path": "~/Library/Application Support/Cyberduck"
                }
            ],
            "defaults": [
                "defaults write ch.sudo.cyberduck application.support.path $SYNC_PATH"
            ]
        },
        {
            "name": "TablePlus",
            "files": [
                {
                    "path": "~/Library/Application Support/com.tinyapp.TablePlus"
                }
            ]
        },
        {
            "name": "Audio Plug-Ins",
            "files": [
                {
                    "path": "/Library/Audio/Plug-Ins"
                }
            ]
        }
    ]
}
